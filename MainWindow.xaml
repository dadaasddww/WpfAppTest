<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"  Grid.Column="0" Margin="5" Background="#f24F1c"/>
        <Border  Grid.Row="0"  Grid.Column="1"  Margin="5" Background="#7FBA00"/>
        <Border  Grid.Row="1"  Grid.Column="0"  Margin="5" Background="#00A7F0"/>
        <Border  Grid.Row="1"  Grid.Column="1"  Margin="5" Background="#FEB900"/>
        <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26" Grid.Column="0" Grid.ColumnSpan="2" Text="MicroSoft"/>
    </Grid>
    
    
</Window>
